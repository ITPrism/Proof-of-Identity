<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="basic" label="COM_IDENTITYPROOF_BASIC">
        <field name="files_path" type="text" default="{FILES_PATH}" label="COM_IDENTITYPROOF_FILES_DIRECTORY" description="COM_IDENTITYPROOF_FILES_DIRECTORY_DESC" class="input-xxlarge" hint="/home/user123/public_html/secretFolder34567" />
        <field name="legal_extensions" type="text" default="jpg, jpeg, png, pdf" label="COM_IDENTITYPROOF_LEGAL_EXTENSIONS" description="COM_IDENTITYPROOF_LEGAL_EXTENSIONS_DESC" class="input-xxlarge"/>
        <field name="legal_types" type="textarea" default="image/png, application/png, application/x-png,image/jpeg, image/jpg, application/jpg, application/x-jpg, image/pipeg, image/pjpeg, image/vnd.swiftview-jpeg, application/pdf, application/x-pdf, application/acrobat, applications/vnd.pdf, text/pdf, text/x-pdf" label="COM_IDENTITYPROOF_LEGAL_MIME_TYPES" description="COM_IDENTITYPROOF_LEGAL_MIME_TYPES_DESC" class="input-xxlarge"/>
        <field name="max_size" type="text" default="5" label="COM_IDENTITYPROOF_MAX_SIZE_MB" description="COM_IDENTITYPROOF_MAX_SIZE_MB_DESC" class="input-mini"/>
    </fieldset>

    <fieldset name="advanced" label="COM_IDENTITYPROOF_ADVANCED">
        <field name="display_status" type="radio" default="1" label="COM_IDENTITYPROOF_DISPLAY_STATUS_INFORMATION" description="COM_IDENTITYPROOF_DISPLAY_STATUS_INFORMATION_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="display_note" type="radio" default="0" label="COM_IDENTITYPROOF_DISPLAY_ADDITIONAL_INFORMATION" description="COM_IDENTITYPROOF_DISPLAY_ADDITIONAL_INFORMATION_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="additional_information" type="textarea" label="COM_IDENTITYPROOF_ADDITIONAL_INFORMATION" description="COM_IDENTITYPROOF_ADDITIONAL_INFORMATION_DESC" class="input-xxlarge"/>
        <field name="display_https_warning" type="radio" default="1" label="COM_IDENTITYPROOF_DISPLAY_HTTPS_WARNING" description="COM_IDENTITYPROOF_DISPLAY_HTTPS_WARNING_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="auto_redirect" type="radio" default="0" label="COM_IDENTITYPROOF_AUTO_REDIRECT_SSL" description="COM_IDENTITYPROOF_AUTO_REDIRECT_SSL_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="administrator_id" type="user" label="COM_IDENTITYPROOF_ADMINISTRATOR" description="COM_IDENTITYPROOF_FIELD_ADMINISTRATOR_DESC" />
    </fieldset>
</config>